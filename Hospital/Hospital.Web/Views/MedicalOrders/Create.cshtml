@model MedicalOrderDTO
@{
    ViewData["Title"] = "Crear Orden Médica";
}

<div class="pagetitle">
    <h1>Orden Médica</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Orden médica</a></li>
            <li class="breadcrumb-item active">Nueva Orden Médica</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">

    <form class="row g-3" asp-action="Create" method="post">
        <div class="col-12">
            <label for="inputNanme4" class="form-label">Descripción</label>
            <input asp-for="Description" class="form-control" id="inputNanme4" placeholder="Descripción">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="inputNanme4" class="form-label">Diagnóstico</label>
            <input asp-for="Diagnosis" class="form-control" id="inputNanme4" placeholder="Diagnóstico">
        </div>

        <div class="col-12">
            <label class="form-label">Medicamentos</label>
            <select asp-for="MedicationId" asp-items="Model.Medications" class="form-control" id="IdMedications"></select>
            <span asp-validation-for="MedicationId" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label class="form-label">Cita</label>
            <select asp-for="AppoimentId" asp-items="Model.Appoiments" class="form-control" id="IdAppoiment"></select>
            <span asp-validation-for="AppoimentId" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form><!-- Vertical Form -->

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
