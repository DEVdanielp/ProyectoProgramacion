@model List<Rol>
@{
    ViewData["Title"] = "Roles";
}

<div class="pagetitle">
    <h1>Roles</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Roles</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="card">
    <div class="card-header">
        <h3 class="m-0 font-weight text-primary">Roles</h3>
    </div>

    <div class="card-body mt-2">

        <!-- Tabla usada -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Rol</th>
                    <th scope="col">Descripción</th>
                    <th scope="col"></th>
>
                </tr>
            </thead>
            <tbody>
                @foreach(Rol item in Model)
                {
                    <tr>

                        <td>@item.NameRol</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.NameRol" class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.NameRol" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></a>     
                        </td>
                    </tr>
                }

                
            </tbody>
        </table>
        <!-- Tabla usada-->

    </div>
</div>

