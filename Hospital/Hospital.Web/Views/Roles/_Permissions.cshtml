@model HospitalRoleDTO

	<div class="card shadow mb-4">
		<div class="card-body">
			<h3 class="card-title">Permisos</h3>

			<div class="row">
				@* traer los permisos y agrupar los permisos por modulos, crear una lista de los roles*@

				@foreach (var module in Model.Permissions.GroupBy(obj => obj.Module))
				{
					<div class="col-md-3 mt-3">
					<h5>@module.Key</h5> @*devolver el nombre*@

						@* vamos a recorrer los permisos de los modulos agrupados*@

						@foreach (var permission in module)
						{
							<div class="form-check form-switch">
								<input class="form-check-input permission"   @* crear un switch para chulear los permisos con el checkbox*@
								type="checkbox"
								data-permission-id="@permission.Id"
								id="permission_@permission.Id"
							@(permission.Selected ? "checked" : "") />  @*si ese permiso es selected, le vamos a decir al switch que esta seleccionado*@
							
							@*Descripcion de los permisos*@
								<label class="form-check-label" for="permission_@permission.Id">@permission.Description</label>
							</div>
						}

					</div>

				}


			</div>
		</div>

	</div>

