@model HospitalRole
@{
    ViewData["Title"] = "Crear Rol";
}

<div class="pagetitle">
    <h1>Roles</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
            <li class="breadcrumb-item active">Nuevo rol</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">

    <form class="row g-3" asp-action="Create" method="post">
        <div class="col-12">
            <label for="inputNanme4" class="form-label">@Html.DisplayFor(model => model.Name)</label>
            <input asp-for="Name" class="form-control" id="inputNanme4" placeholder="Nombre del rol">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form><!-- Vertical Form -->
        
</section>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
