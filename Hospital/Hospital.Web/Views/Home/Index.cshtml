@{
    ViewData["Title"] = "Home Page";
}
@inject Hospital.Web.Services.IUsersService _usersService

        <!-- Hero Section -->
    <section class="hero text-center text-white d-flex align-items-center justify-content-center"
             style="
        background-image: url('assets/img/fondo.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 400px;">
        <div class="container" style="text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);">
            <h1 style="font-size: 2.5rem; font-weight: bold;">Bienvenido a Hospital Salud y Vida</h1>
            <p style="font-size: 1.2rem;">Proporcionando atención médica de calidad para todos</p>
        </div>
    </section>


        <!-- Services Section -->
        <section id="services" class="container my-5">
            <h2 class="section-title">Nuestros Servicios</h2>
            <div class="row g-4">
                @foreach (var service in new[] {
                new { Title = "Cardiología", Description = "Ofrecemos servicios de diagnóstico y tratamiento de enfermedades cardíacas.", Image = "Cardiologia.webp" },
                new { Title = "Pediatría", Description = "Cuidado especializado para niños y adolescentes con profesionales capacitados.", Image = "Pediatra.webp" },
                new { Title = "Ortopedia", Description = "Tratamiento de lesiones y trastornos del sistema músculo-esquelético.", Image = "Ortopedria.webp" }
                })
                {
                    <div class="col-md-4">
                        <div class="card text-center h-100">
                            <img src="~/assets/img/@service.Image" class="card-img-top" alt="@service.Title">
                            <div class="card-body">
                                <h5 class="card-title">@service.Title</h5>
                                <p class="card-text">@service.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- Medical Team Section -->
        <section id="team" class="container my-5">
            <h2 class="section-title">Nuestro Equipo Médico</h2>
            <div class="row g-4">
                @foreach (var doctor in new[] {
                new { Name = "Dr. Juan Pérez", Role = "Cardiólogo Jefe", Image = "JuanP.jpg" },
                new { Name = "Dra. María López", Role = "Pediatra", Image = "Maria.jpg" },
                new { Name = "Dr. Roberto García", Role = "Ortopedista", Image = "Roberto.jpg" }
                })
                {
                    <div class="col-md-4">
                        <div class="card text-center h-100">
                            <img src="~/assets/img/@doctor.Image" class="card-img-top" alt="@doctor.Name">
                            <div class="card-body">
                                <h5 class="card-title">@doctor.Name</h5>
                                <p class="card-text">@doctor.Role</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="container my-5">
            <h2 class="section-title">Acerca de Nosotros</h2>
            <p>
                En Hospital Salud y Vida, nos comprometemos a brindar atención médica integral y de alta calidad a nuestros pacientes.
                Nuestro equipo de médicos y personal altamente capacitado trabaja incansablemente para garantizar el bienestar y la salud de nuestra comunidad.
            </p>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="container my-5">
            <h2 class="section-title">Contáctanos</h2>
            <ul class="list-unstyled">
                <li><strong>Teléfono:</strong> +123 456 7890</li>
                <li><strong>Correo:</strong> <a href="mailto:contacto@hospitalvida.com">contacto@hospitalvida.com</a></li>
                <li><strong>Dirección:</strong> Calle Salud, 123, Ciudad, País</li>
            </ul>
        </section>



