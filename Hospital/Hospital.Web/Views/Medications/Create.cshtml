@model Medication
@{
    ViewData["Title"] = "Crear Medicamento";
}

<div class="pagetitle">
    <h1>Medicamentos</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Medicamentos</a></li>
            <li class="breadcrumb-item active">Nuevo Medicamento</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">

    <form class="row g-3" asp-action="Create" method="post">
        <div class="col-12">
            <label for="inputNanme4" class="form-label">Nombre Comercial</label>
            <input asp-for="CommercialName" class="form-control" id="inputNanme4" placeholder="Nombre Comercial">
            <span asp-validation-for="CommercialName" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label for="inputNanme4" class="form-label">Nombre Científico</label>
            <input asp-for="ScientificName" class="form-control" id="inputNanme4" placeholder="Nombre Científico">
        </div>
        <div class="col-12">
            <label for="inputNanme4" class="form-label">Tipo</label>
            <input asp-for="Group" class="form-control" id="inputNanme4" placeholder="Tipo">
        </div>

        <div class="col-12">
            <label for="inputNanme4" class="form-label">Laboratorio de Fabrica</label>
            <input asp-for="Laboratory" class="form-control" id="inputNanme4" placeholder="Laboratoro de Fabrica">
        </div>

        <div class="col-12">
            <label for="inputNanme4" class="form-label">Descripción</label>
            <input asp-for="Description" class="form-control" id="inputNanme4" placeholder="Descripción">
        </div>
        
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form><!-- Vertical Form -->

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

