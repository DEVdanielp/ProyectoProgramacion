@model MedicalHistoryDTO
@{
    ViewData["Title"] = "Editar Historia Clínica";
}

<div class="pagetitle">
    <h1>Historia Clínica</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">MedicalHistory</a></li>
            <li class="breadcrumb-item active">Editar Medicamnetos</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">

    <form class="row g-3" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="col-12">
            <label for="inputNanme4" class="form-label">Nombre Del Paciente</label>
            <input asp-for="NamePatient" class="form-control" id="inputNanme4">
            <span asp-validation-for="NamePatient" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label for="inputNanme4" class="form-label">Descripción</label>
            <input asp-for="Description" class="form-control" id="inputNanme4">
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Seleccionar Cita</label>
            <div class="col-sm-10">
                <select asp-for="AppoimentId" asp-items="Model.Appoiment" class="form-control">
                    <option selected>Click para seleccionar una cita</option>
                </select>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form><!-- Vertical Form -->

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
