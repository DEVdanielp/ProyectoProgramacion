@model MedicalHistoryDTO
@{
    ViewData["Title"] = "Crear Historia Clínica";
}

<h1>@ViewData["Title"]</h1>

<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Historia Clínica</a></li>
            <li class="breadcrumb-item active">Nueva Historia Clínica</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NamePatient" class="control-label"></label>
        <input asp-for="NamePatient" class="form-control" />
        <span asp-validation-for="NamePatient" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Seleccionar Cita</label>
        <div class="col-sm-10">
            <select asp-for="AppoimentId" asp-items="Model.Appoiment" class="form-control">
                <option selected>Click para seleccionar una cita</option>
            </select>
        </div>
    </div>
     
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form><!-- Vertical Form -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
