@model MedicalHistoryDTO
@{
    ViewData["Title"] = "Crear Historia Clínica";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="NamePatient" class="control-label"></label>
        <input asp-for="NamePatient" class="form-control" />
        <span asp-validation-for="NamePatient" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label class="form-label">Citas</label>
        
        <span asp-validation-for="AppoimentId" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form><!-- Vertical Form -->
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
