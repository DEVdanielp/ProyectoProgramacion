@model RolPermissionsDTO
@{
    ViewData["Title"] = "Asignacion de permisos";
}


<div class="pagetitle">
    <h1>Citas</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Asignacion de permisos</a></li>
            <li class="breadcrumb-item active">Nuevo permiso para la cita</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Asignar permiso</h5>

                    <!-- General Form Elements -->
                    <form asp-action="Create" method="post">
                        
                      <!--Select-->
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Seleccionar Rol</label>
                            <div class="col-sm-10">
                                <select asp-for="rolId" asp-items="Model.Rol" class="form-control">
                                    <option selected>Click para seleccionar una rol</option>
                                </select>
                            </div>
                        </div>

                        <!--Select-->
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Seleccionar Permiso</label>
                            <div class="col-sm-10">
                                <select asp-for="PermisosId" asp-items="Model.Permisos" class="form-control">
                                    <option selected>Click para seleccionar un permiso</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Crear estado</button>
                                <a asp-action="Index" class="btn btn-secondary">Volver</a>
                            </div>
                        </div>

                    </form><!-- End General Form Elements -->

                </div>
            </div>

        </div>


    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


