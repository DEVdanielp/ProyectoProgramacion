@model UserDTO
@{
    ViewData["Title"] = "Nueva Seccion";
}

<div class="pagetitle">
    <h1>Usuarios</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
            <li class="breadcrumb-item active">Nuevo Usuario</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Nuevo Usuario</h5>

            <form class="row g-3" asp-action="Create" method="POST">
                <div class="col-md-12">
                    <label class="form-label">Primer Nombre</label>
                    <div class="form-floating">
                        <input class="form-control" id="floatingName" placeholder="@Html.DisplayFor(model => model.FirstName)">
                        <label for="floatingName">@Html.DisplayFor(model => model.FirstName)</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <label class="form-label">Apellidos</label>
                    <div class="form-floating">
                        <input  class="form-control" id="floatingName" placeholder="@Html.DisplayFor(model => model.LastName)">
                        <label for="floatingName">@Html.DisplayFor(model => model.LastName)</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <label class="form-label">Cumpleaños</label>
                    <div class="form-floating">
                        <input type="date"  class="form-control" id="floatingName" placeholder="@Html.DisplayFor(model => model.Birth)">
                        <label for="floatingName">@Html.DisplayFor(model => model.Birth)</label>
                        <span asp-validation-for="Birth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <label class="form-label">Nombre de Usuario</label>
                    <div class="form-floating">
                        <input class="form-control" id="floatingName" placeholder="@Html.DisplayFor(model => model.UserName)">
                        <label for="floatingName">@Html.DisplayFor(model => model.UserName)</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <label class="form-label">Contraseña</label>
                    <div class="form-floating">
                        <input class="form-control" id="floatingName" placeholder="@Html.DisplayFor(model => model.Password)">
                        <label for="floatingName">@Html.DisplayFor(model => model.Password)</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <label class="form-label">Rol</label>
                    <div class="form-floating">
                        <Select class="form-control" asp-for="RolId" asp-items="Model.Rols" id="floatingName" placeholder="@Html.DisplayFor(model => model.RolId)"></Select>
                        <label for="floatingName">@Html.DisplayFor(model => model.RolId)</label>
                        <span asp-validation-for="RolId" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}