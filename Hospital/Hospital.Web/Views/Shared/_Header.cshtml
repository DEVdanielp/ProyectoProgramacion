@inject Hospital.Web.Services.IUsersService _usersService


@{
    User user;
    try
    {
        user = await _usersService.GetUserAsync(User.Identity.Name);
    }
    catch
    {
        user = null;
    }
}

<header id="header" class="header fixed-top d-flex align-items-center">

    <a href="" class="logo d-flex align-items-center">
        <img src="assets/img/logo.png"
             alt="Logo"
             style="width: 120px; height: auto; margin-right: 15px;"> <!-- Aumenté el tamaño del logo -->
        <span style="font-size: 1.4rem; font-weight: bold; white-space: nowrap;">Hospital Salud y Vida</span>
    </a>

        <!-- Botón para desplegar el sidebar -->
        <i class="bi bi-list toggle-sidebar-btn"
           style="font-size: 1.8rem; margin-left: 15px; cursor: pointer;">
        </i>


    <!-- Barra de búsqueda -->
    <div class="search-bar d-flex justify-content-center my-3">
        <form class="search-form d-flex align-items-center" method="POST" action="#">
            <input type="text"
                   name="query"
                   placeholder="Buscar"
                   title="Buscar"
                   style="padding: 8px; font-size: 1rem; border: 1px solid #ccc; border-radius: 4px; margin-right: 8px;">
            <button type="submit"
                    title="Buscar"
                    style="background-color: #8dcfec; color: white; padding: 9px 12px; border: none; border-radius: 4px; cursor: pointer;">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>


    <!-- Navegación principal -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light text-center">
        <div class="container">
            <!-- Botón para el menú en dispositivos pequeños -->
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Enlaces de navegación -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#services">Servicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#team">Equipo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">Acerca de</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">

            <li class="nav-item d-block d-lg-none">
                <a class="nav-link nav-icon search-bar-toggle " href="#">
                    <i class="bi bi-search"></i>
                </a>
            </li>

            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                <li class="dropdown-header">
                    <h6>Kevin Anderson</h6>
                    <span>Web Designer</span>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>

                <li>
                    <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                        <i class="bi bi-person"></i>
                        <span>My Profile</span>
                    </a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>

                <li>
                    <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                        <i class="bi bi-gear"></i>
                        <span>Account Settings</span>
                    </a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>

                <li>
                    <a class="dropdown-item d-flex align-items-center" href="pages-faq.html">
                        <i class="bi bi-question-circle"></i>
                        <span>Need Help?</span>
                    </a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>

                <li>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Sign Out</span>
                    </a>
                </li>

            </ul><!-- End Profile Dropdown Items -->
            <li class="nav-item dropdown pe-3">

                @if (user is not null)
                {

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@user.FullName</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@user.FullName</h6>
                            <span>@user.HospitalRole.Name</span>
                            <br />
                            <span>@user.Email</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                                <i class="bi bi-person"></i>
                                <span>Mi Perfil</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Cerrar Sesión</span>
                            </a>
                        </li>

                    </ul>
                }
                else
                {
                    <a class="nav-link dropdown-toggle" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Iniciar Sesión</span>
                    </a>
                }

            </li>

        </ul>
    </nav>

</header>

