                @if (await _usersService.CurrentUserIsAuthorizedAsync("showMedicalHistory", "Historia Clínica"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "MedicalHistory" ? "" : "collapsed")"
                           asp-controller="MedicalHistory"
                           asp-action="Index">
