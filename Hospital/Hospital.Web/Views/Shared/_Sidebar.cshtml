                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Medications" ? "" : "collapsed")"
                        asp-controller="Medications"
                        asp-action="Index">
                            <i class="bi bi-grid"></i>
                            <span>Medicamentos</span>
                        </a>
                    </li>
                }
                <!--Órdenes Médicas -->
                @if (await _usersService.CurrentUserIsAuthorizedAsync("showMedicalOrder", "Órdenes Médicas"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "MedicalOrders" ? "" : "collapsed")"
                        asp-controller="MedicalOrders"
                        asp-action="Index">
                            <i class="bi bi-grid"></i>
                            <span>Órdenes Médicas</span>
                        </a>
                    </li>
                }
