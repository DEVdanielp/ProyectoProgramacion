                           asp-action="Index">
                            <i class="bi bi-grid"></i>
                            <span>Especialidad Médica</span>
                        </a>
                    </li>
                }
                <!-- Citas -->
                @if (await _usersService.CurrentUserIsAuthorizedAsync("showAppoiment", "Citas"))
